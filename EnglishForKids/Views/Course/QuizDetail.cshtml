<style>

    /* Định dạng icon bài viết và chữ "ARTICLE" */
    .article-time {
        display: flex;
        align-items: center; /* Giữ icon và chữ trên cùng một hàng */
        gap: 8px; /* Khoảng cách giữa icon và chữ */
        font-size: 14px;
        font-weight: bold;
        color: #333;
        background: #f4f4f4; /* Màu nền nhẹ cho phần hiển thị */
        padding: 5px 10px;
        border-radius: 5px; /* Bo góc mềm mại */
        width: fit-content; /* Chỉ chiếm diện tích theo nội dung */
        padding: 2px 2px;
    }

        /* Định dạng icon */
        .article-time i {
            font-size: 16px; /* Kích thước icon */
            color: #007bff; /* Màu xanh dương nổi bật */
        }

    /* Định dạng chữ "ARTICLE" */
    .article-text {
        text-transform: uppercase; /* Viết hoa toàn bộ chữ */
        font-size: 12px;
        letter-spacing: 1px; /* Giãn chữ nhẹ */
        color: #007bff; /* Đồng bộ màu với icon */
    }

    /* Tổng thể phần tử */
    .item1 {
        display: flex;
        align-items: flex-start;
        width: 100%;
        gap: 10px;
    }

    /* Bọc icon + nội dung */
    .lesson-wrapper {
        display: flex;
        @* align-items: center; *@
        gap: 10px;
        width: 100%;
    }

    /* Định dạng icon check */
    .icon-check {
        width: 20px;
        height: 20px;
        background-color: #4CAF50;
        border-radius: 50%;
        flex-shrink: 0; /* Giữ icon cố định, không bị đẩy xuống */
    }

    /* Bọc nội dung bài học */
    .lesson-content {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    /* Tiêu đề bài học */
    .title {
        display: flex;
        @* align-items: center; *@
        gap: 5px; /* Khoảng cách giữa icon và chữ */
        width: 100%;
        overflow: hidden; /* Ẩn nội dung quá dài */
        @* white-space: nowrap; /* Không cho xuống dòng */ *@
        @* text-overflow: ellipsis; /* Hiển thị dấu "..." nếu quá dài */ *@
    }

        /* Định dạng icon trong phần tiêu đề */
        .title i {
            font-size: 16px;
            color: #333;
            flex-shrink: 0; /* Giữ icon cố định, không bị đẩy xuống */
        }

    /* Định dạng chữ của bài học */
    .lesson-title {
        display: inline-block; /* Giữ nó là phần tử nội dòng nhưng vẫn nhận width */
        max-width: 300px; /* Giới hạn chiều rộng */
        white-space: nowrap; /* Ngăn xuống dòng */
        overflow: hidden; /* Ẩn phần nội dung bị tràn */
        text-overflow: ellipsis; /* Hiển thị dấu "..." khi nội dung quá dài */
        word-break: keep-all; /* Giữ nguyên từ, không tự động xuống dòng */
    }


    /* Định dạng thời gian */
    .time {
        font-size: 14px;
        color: gray;
        display: flex;
        align-items: center;
        gap: 5px;
        margin-top: 5px;
    }

        /* Định dạng icon thời gian */
        .time i {
            font-size: 14px;
            color: gray;
        }

    /* Định dạng nút tài liệu */
