<!-- CSS -->
<style>
    /* Chỉ áp dụng cho audio-container */
    .audio-container {
        max-width: 500px;
        margin: 20px auto;
        margin-top: 50px;
        padding: 20px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
    }

        /* Icon Audio lớn */
        .audio-container .audio-icon {
            font-size: 50px;
            color: #ff4081;
            margin-bottom: 10px;
        }

        /* Điều chỉnh thanh điều khiển */
        .audio-container .plyr__controls {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        /* Thanh tiến trình */
        .audio-container .plyr__progress {
            width: 100%;
            height: 8px !important;
            border-radius: 10px;
            background: #ddd;
            position: relative;
            overflow: hidden;
        }

            /* Custom thanh tiến trình */
            .audio-container .plyr__progress input {
                height: 8px !important;
                background: #ff4081;
            }

        /* Điều chỉnh icon ở trên thanh tiến trình */
        .audio-container .audio-icon-overlay {
            position: absolute;
            top: -35px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 40px;
            color: #ff4081;
        }

        /* Nút điều khiển */
        .audio-container .plyr__controls button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
        }

            /* Nút phát/tạm dừng */
            .audio-container .plyr__controls button.plyr__control--play {
                font-size: 24px;
                color: #ff4081;
            }

        /* Âm lượng */
        .audio-container .plyr__volume {
            width: 100px !important;
        }

            .audio-container .plyr__volume input {
                background: #ff4081;
            }

        /* Tốc độ phát */
        .audio-container .plyr__controls .plyr__control[data-plyr="speed"] {
            font-size: 16px;
            color: #ff4081;
        }





    #quiz-result-panel span {
        font-weight: 700;
    }

    /* Đổi màu khi đáp án bị vô hiệu hóa */
    .disabled-option {
        opacity: 0.5;
        pointer-events: none;
        background-color: #f0f0f0;
        border-radius: 50px;
    }

    .item3 {
        padding: 5px 10px;
    }

    .file-download {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        .file-download:hover {
            color: #ff4500;
            text-decoration: underline;
        }

    .video-container {
        width: 100%;
        height: 572.200px; /* Đặt chiều cao cố định */
        position: relative;
    }


    /* Navigation Controls */
    .nav-quiz {
        display: none;
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        transform: translateY(-50%);
        display: flex;
        justify-content: space-between;
        width: 100%;
        pointer-events: none;
    }

        /* Nút Prev & Next */
        .nav-quiz div {
            background: rgba(255, 255, 255, 0.8); /* Nền trắng trong suốt */
            color: black; /* Màu icon */
            padding: 15px;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 50%; /* Làm tròn */
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: all; /* Bật click cho nút */
            transition: all 0.3s ease-in-out;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); /* Viền mờ */
        }

    /* Căn chỉnh nút Prev */
    .nav-prev {
        position: absolute;
        left: 10px;
        z-index: 10;
    }

    /* Căn chỉnh nút Next */
    .nav-next {
        position: absolute;
        right: 10px;
        z-index: 10;
    }

    /* Hiệu ứng hover */
    .nav-quiz div:hover {
        background: rgba(255, 255, 255, 1);
        color: black;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5);
    }

    .btn-file:hover {
        background-color: color-mix(in sRGB, #3b82f6 12%, transparent);
    }


    .video-js {
        width: 100%;
        height: 100%; /* Đảm bảo video luôn lấp đầy container */
    }

        .video-js .vjs-tech {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

    .file-list {
        background-color: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-left: 20px;
        padding: 10px;
        position: relative;
        z-index: 100;
    }

        .file-list p {
            margin: 5px 0;
        }

        .file-list a {
            color: #1c1d1f;
            display: block;
            text-decoration: none;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 250px;
        }

