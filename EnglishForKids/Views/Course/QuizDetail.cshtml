        }








    /* Chỉ áp dụng cho audio-container */
    .audio-container {
        max-width: 500px;
        margin: 20px auto;
        margin-top: 50px;
        padding: 20px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
    }

        /* Icon Audio lớn */
        .audio-container .audio-icon {
            font-size: 50px;
            color: #ff4081;
            margin-bottom: 10px;
        }

        /* Điều chỉnh thanh điều khiển */
        .audio-container .plyr__controls {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        /* Thanh tiến trình */
        .audio-container .plyr__progress {
            width: 100%;
            height: 8px !important;
            border-radius: 10px;
            background: #ddd;
            position: relative;
            overflow: hidden;
        }

            /* Custom thanh tiến trình */
            .audio-container .plyr__progress input {
                height: 8px !important;
                background: #ff4081;
            }

        /* Điều chỉnh icon ở trên thanh tiến trình */
        .audio-container .audio-icon-overlay {
            position: absolute;
            top: -35px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 40px;
            color: #ff4081;
        }

        /* Nút điều khiển */
        .audio-container .plyr__controls button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
        }

            /* Nút phát/tạm dừng */
            .audio-container .plyr__controls button.plyr__control--play {
                font-size: 24px;
                color: #ff4081;
            }

        /* Âm lượng */
        .audio-container .plyr__volume {
            width: 100px !important;
        }

            .audio-container .plyr__volume input {
                background: #ff4081;
            }

        /* Tốc độ phát */
        .audio-container .plyr__controls .plyr__control[data-plyr="speed"] {
            font-size: 16px;
            color: #ff4081;
        }


