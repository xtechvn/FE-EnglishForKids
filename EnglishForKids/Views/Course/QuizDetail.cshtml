        }

        .file-list a {
            color: #1c1d1f;
            display: block;
            text-decoration: none;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 250px;
        }

            .file-list a:hover {
                color: #5624d0;
            }

    .item {
        
        border-radius: 5px;
