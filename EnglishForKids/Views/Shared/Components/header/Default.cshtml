@using EnglishForKids.Models;
@model List<CategoryModel>
@{
    string current_url = ViewBag.current_url;
    current_url = current_url.Split("/").Last();
}
@if (Model != null)
{
    <!-- Topbar Start -->
    <div class="topbar">
        <div class="container">
            <ul class="top-nav">
                <li class="nav-item">
                    <a class="nav-link"  href="#"><i class="icofont-ui-user"></i>Đăng nhập / Đăng ký</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="icofont-shopping-cart"></i>Giỏ hàng</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Header Start -->
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/">
                    <div class="logo">
                        <img class="green" src="~/images/logo.svg" alt="" />
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="icofont-navigation-menu"></i>
                </button>
                <form class="form-inline my-2 my-lg-0" action="/san-pham/tim-kiem" method="get">
                    <input class="form-control" type="search" name="p" placeholder="Tìm kiếm..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                        <i class="icofont-search"></i>
                    </button>
                </form>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item @Html.Raw(current_url==""?"active":"")">
                            <a class="nav-link" href="/">Trang chủ</a>
                        </li>
                        @foreach (var item in Model)
                        {
                            <li class="nav-item @Html.Raw((item.path.IndexOf(current_url) >=0 && current_url!="")  ?"active":"")">
                                <a class="nav-link" href="@("/" + item.path.Replace("-"+ item.id,"" ) )">@item.name</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="#">Khóa học</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Review của học viên</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- Header End -->

    <script src="~/js/common.js"></script>
}
